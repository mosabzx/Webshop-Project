@using Microsoft.AspNetCore.Identity
@using WebShop.Models
@{
    ViewBag.Title = "Category List";
}
@*<h1>All Categories</h1>*@
<h2 class="text-center">Category List</h2>
<p>
    @*@Html.ActionLink("Add New Product Type", "Create")*@
    <a class="btn btn-warning btn-lg" asp-action="Create">Create New Category</a>
</p>

@*<a asp-action="CreateRole" class="btn btn-secondary">Create a Role</a>*@
<table class="table">
    @*<table class="table table-sm table-bordered table-bordered">*@
    <tr>
        @*<th>ID</th>*@
        <th>ProductType</th>
        <th>Edit</th>
        <th>Delete</th>
        @*<th>Update</th>*@

    </tr>
    @foreach (var role in Model)
    {
        <tr>
            @*<td>@role.Id</td>*@
            <td>@role.CategoryName</td>
            @*<td i-role="@role.Id"></td>*@
            @*<td><userName for-role="@role.Id"></userName></td>*@
            <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.CategoryId">Edit</a></td>
            @*<td><a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@role.CategoryId">Details</a></td>*@
            <td><a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@role.CategoryId">Delete</a>
               
            </td>
        </tr>
    }
</table>

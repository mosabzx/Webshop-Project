@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Roles List";
}
@*<h1>All Roles</h1>*@
<h2 class="text-center">Role List</h2>
<p>
    @*@Html.ActionLink("Create a Role", "CreateRole")*@
    <a class="btn btn-warning btn-lg" asp-action="CreateRole">Create New Role</a>
</p>

@*<a asp-action="CreateRole" class="btn btn-secondary">Create a Role</a>*@
<table class="table mt-2">
    @*<table class="table table-sm table-bordered table-bordered">*@
    <tr>
        @*<th>ID</th>*@
        <th>Name</th>
        <th>Update</th>
        <th>Details</th>
        <th>Delete</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            @*<td>@role.Id</td>*@
            <td>@role.Name</td>
            @*<td i-role="@role.Id"></td>*@
            @*<td><userName for-role="@role.Id"></userName></td>*@
            <td><a class="btn btn-sm btn-primary" asp-action="UpdateRole" asp-route-id="@role.Id">Update</a></td>
            <td><a class="btn btn-sm btn-primary" asp-action="RoleDetails" asp-route-id="@role.Id">Details</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

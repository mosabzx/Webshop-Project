@model WebShop.Models.Products

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit '@Model.Name'</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="ImageName" class="control-label"></label>*@
                <input type = "hidden" asp-for="ImageName" class="form-control" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"> Click to change photo</label>
                <input asp-for="ImageFile" calss="control-form" />
                <!--<span asp-validation-for="ImageFile" class="text-danger"></span>-->
            </div>

            <div class="control-label">
                <img src="~/Image/@Model.ImageName" class="img-thumbnail" style="width: 150px; height:auto" />
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.CategoryId, "Select Category")
                </div>
                <div class="">

                    @Html.DropDownListFor(model => model.CategoryId, ViewBag.TypeId as SelectList, new { @class = "dropdown" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />|
                <a class="btn btn-warning" asp-action="Index">Back To List</a>
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
